# enter a password
password = input("Enter your password: ")

# if the password is at least 8 characters long
if len(password) < 8:
    print("Password is invalid. It must be at least 8 characters long.")
else:
    contains_upper = any(char.isupper() for char in password)
    contains_lower = any(char.islower() for char in password)
    contains_digit = any(char.isdigit() for char in password)
    
    # Check if the password contains both uppercase and lowercase letters
    if not (contains_upper and contains_lower):
        print("Password is invalid. It must contain both uppercase and lowercase letters.")
    # Check if the password contains at least one numeric digit
    elif not contains_digit:
        print("Password is invalid. It must contain at least one numeric digit.")
    else:
        print("Password is valid.")
